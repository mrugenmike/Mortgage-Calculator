<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Monthly Payment: "
        android:id="@+id/monthlyPaymentLabel"
        android:layout_gravity="left"
        android:enabled="true"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Monthly Payment Value"
        android:id="@+id/monthlyPayment"
        android:enabled="true"
        android:textAlignment="viewStart"
        android:paddingTop="10dp"
        android:layout_above="@+id/totalInterestPaidLabel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/totalPropertyTaxPaidLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Interest: "
        android:id="@+id/totalInterestPaidLabel"
        android:layout_gravity="left"
        android:enabled="true"
        android:textAlignment="center"
        android:layout_below="@id/monthlyPaymentLabel"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Interest Paid"
        android:id="@+id/totalInterestPaid"
        android:enabled="true"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_below="@id/monthlyPayment"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/monthlyPayment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Property Tax: "
        android:id="@+id/totalPropertyTaxPaidLabel"
        android:layout_gravity="left"
        android:enabled="true"
        android:textAlignment="center"
        android:layout_below="@id/totalInterestPaidLabel"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Property Paid"
        android:id="@+id/totalPropertyTaxPaid"
        android:enabled="true"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_below="@+id/totalInterestPaid"
        android:layout_alignStart="@+id/totalInterestPaid"
        android:layout_alignEnd="@+id/totalInterestPaid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Payoff Date: "
        android:id="@+id/payOffDateLabel"
        android:layout_gravity="left"
        android:enabled="true"
        android:textAlignment="center"
        android:layout_below="@id/totalPropertyTaxPaidLabel"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:layout_alignEnd="@+id/monthlyPaymentLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Payoff Date Val"
        android:id="@+id/payOffDate"
        android:enabled="true"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_below="@+id/totalPropertyTaxPaid"
        android:layout_alignStart="@+id/totalPropertyTaxPaid"
        android:layout_alignEnd="@+id/totalPropertyTaxPaid"
        android:layout_alignBottom="@+id/payOffDateLabel" />

</RelativeLayout>
